    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Marque</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Motos)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Modèle</th>
                    <th>Cylindrée</th>
                </tr>
